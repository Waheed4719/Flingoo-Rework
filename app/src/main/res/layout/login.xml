<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#233048"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:paddingHorizontal="30dp">


    <ImageView
        android:layout_width="157dp"
        android:layout_height="157dp"
        android:layout_marginTop="140dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/ic_interface" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Flingoo"
        android:fontFamily="@font/earthorbitertitle"
        android:textColor="#FFFFFFFF"
        android:textSize="34dp"
        android:textAlignment="center"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get Serviced on the go"
        android:fontFamily="@font/earthorbitertitle"
        android:textColor="#FFFFFFFF"
        android:alpha="0.5"
        android:textStyle="italic"
        android:textAlignment="center"
        android:layout_marginBottom="20dp"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:padding="20dp"
        android:paddingLeft="20dp"
        android:id="@+id/email"
        android:hint="Email"
        android:textSize="15dp"
        android:fontFamily="@font/convergence"
        android:background="@drawable/et_custom"
        android:textColorHint="@color/gains"
        android:textColor="#BEB8B8"
        android:elevation="8dp"
        android:layout_marginVertical="10dp"
        android:alpha="0.6"
        />


    <EditText
        android:id="@+id/pass"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginVertical="10dp"
        android:autofillHints=""
        android:alpha="0.6"
        android:background="@drawable/et_custom"
        android:drawableRight="@drawable/ic_remove_red_eye_black_24dp"
        android:drawableTint="@color/gains"
        android:elevation="8dp"
        android:fontFamily="@font/convergence"
        android:hint="Password"
        android:padding="20dp"
        android:textColor="#BEB8B8"
        android:textColorHint="@color/gains"
        android:textSize="15dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Forgot your password?"
        android:textColor="#f0f0f0"
        android:gravity="right"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/earthorbitertitle"

        />

    <Button
        android:id="@+id/login"
        android:alpha="0.8"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:fontFamily="@font/earthorbitertitle"
        android:background="#3F88C2"
        android:elevation="8dp"
        android:textColor="#FFFFFF"
        android:textSize="16dp"
        android:text="Sign In"
       />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create an account?"
        android:textColor="#ffffff"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/earthorbitertitle"

        />


</LinearLayout>